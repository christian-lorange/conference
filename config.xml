<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.conference" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Conference</name>
    <description>
        A Conference application to get information about sessions and speakers
    </description>
    <author email="guillaume.pouilloux@etudiant.mines-nantes.fr" href="https://www.github.com/gpouilloux">
        Guillaume Pouilloux
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="StatusBarBackgroundColor" value="#0091EA" />
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-network-information"  />
    <plugin name="cordova-sqlite-storage" />
    <plugin name="cordova-plugin-camera"  />
    <plugin name="cordova-plugin-contacts" />
    <plugin name="cordova-plugin-media-capture"  />
    <plugin name="cordova-plugin-file" />
    <plugin name="com.hutchind.cordova.plugins.streamingmedia"  />
    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-x-socialsharing" />
    <plugin name="cordova-plugin-actionsheet" />
    <plugin name="cordova-plugin-calendar" >
        <variable name="CALENDAR_USAGE_DESCRIPTION" value="This app uses your calendar" />
    </plugin>
    <plugin name="cordova-plugin-statusbar"  />
</widget>
